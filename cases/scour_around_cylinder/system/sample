{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      sample;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type sets;
libs            ("libsampling.so");

interpolationScheme cellPointFace;

setFormat       raw;

sets
(
    line1
    {
        type    uniform; 
        axis    x; //options: distance, x, y, z, or xyz
        start   (0   0   0.01);
        end     (1 0 0.01);
        nPoints 200;
    }



);

fields          ( fluidFaceCenterHeigh );


